<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
     android:background="@drawable/orange"
    android:id="@+id/layout"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp">
        <include
            android:id="@+id/actionBar"
            layout="@layout/actionbar_app"></include>



    </com.google.android.material.appbar.AppBarLayout>
    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/graduates" />

    <Button
        android:id="@+id/uzman"
        android:layout_width="273dp"
        android:layout_height="91dp"


        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="188dp"
        android:background="@drawable/buttonshape"
        android:text="Bölümüne Sor"
        android:textColor="#fff" />

    <Button
        android:id="@+id/uzman1"
        android:layout_width="273dp"
        android:layout_height="91dp"
        android:background="@drawable/buttonshape"

        android:layout_alignStart="@+id/uzman"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"

        android:text="Kopyala Yapıştır(eksik)"
        android:textColor="#fff" />

    <Button
        android:id="@+id/ogretmenine_sor"
        android:layout_width="273dp"
        android:layout_height="91dp"
        android:background="@drawable/buttonshape"

        android:layout_alignStart="@+id/uzman"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="302dp"

        android:text="Öğretmenine Sor(eksik)"
        android:textColor="#fff" />


</RelativeLayout>