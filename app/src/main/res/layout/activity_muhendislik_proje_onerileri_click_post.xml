<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context=".MuhendislikProjeOnerileriClickPostActivity">
    <TextView
        android:id="@+id/yorum_yapmak"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="203dp"
        android:background="@drawable/post_border"
        android:text="Post Açıklaması"
        android:backgroundTint="@android:color/white"
        />

    <Button
        android:id="@+id/postkaydet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="83dp"
        android:background="@color/Orange"
        android:text="Postu Güncelle" />

    <Button
        android:id="@+id/postsil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="23dp"
        android:background="@color/Orange"
        android:text="Postu Sil" />
</RelativeLayout>